//======================================//
// 页脚自定义响应式处理
.footerMax560
  @media screen and (max-width: 560px)
    display: none

.footerMax490
  @media screen and (max-width: 490px)
    display: none
    
.footerMax380
  @media screen and (max-width: 380px)
    display: none
//======================================//


//======================================//
// 字体粗细
.fontWeigth
  .w400
    font-weight: 400
  .w500
    font-weight: 500
  .w600
    font-weight: 600
//======================================//



//======================================//
// 禁止选中
.not-select,
figcaption,
footer,
section,
details summary,
.new-meta-box,
.nav-tabs
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  & p,
  & span
    cursor: $default,default
  &.default-cursor
    cursor: $default,default !important
.allow-select
  -webkit-touch-callout all
  -webkit-user-select all
  -khtml-user-select all
  -moz-user-select all
  -ms-user-select all
  user-select all
//======================================//


//======================================//
// 隐藏文本
// <span class="bb_spoiler" title="xxx">xxxx</span>
.bb_spoiler, .bb_spoiler a, a .bb_spoiler, .bb_spoiler a.new
  cursor: $pointer,pointer
  border-bottom 1px solid
  border-color var(--color-p)
  background-color var(--color-card)
  color var(--color-card)
  text-shadow none
  padding 0 2px
  margin 0 2px
.bb_spoiler:hover, .bb_spoiler:active,
  .bb_spoiler:hover .bb_spoiler, .bb_spoiler:active .bb_spoiler
  color var(--color-p) !important
.bb_spoiler
  &:hover
    opacity 1
    transition-duration 0.3s
//======================================//


//======================================//
// 全局背景
#BKG
  background-image: url(hexo-config('globalBackground'))
  background-size: cover
  background-position: center
  z-index: -20
  position: fixed
  top: 0
  bottom: 0
  right: 0
  left: 0

// 文章页自定义背景
.cus-article-bkg
  @media screen and (max-width: $device-mobile)
    display: none
  background-size: cover
  background-position: center
  position: fixed
  top: 0
  bottom: 0
  right: 0
  left: 0
  z-index: -10
//======================================//


//======================================//
// 修饰导航栏标题
.fix-header-title
  margin: 0 auto
  font-size: 1.5rem
  overflow: hidden
  font-weight: 800 !important
  font-family: 'SentyGoldenBell' !important
  @media screen and (max-width: $device-mobile)
    margin: unset !important
    font-size: 1rem !important
//======================================//


//======================================//
// 自定义的淡入淡出
.content-in
  animation: content-fadeIn
  animation-duration: 1s
.content-out
  animation: content-fadeOut
  animation-duration: 1s
@keyframes content-fadeIn {
  0% {opacity: 0;}
  50% {opacity: 0;}
  100% {opacity: 1;}
}
@keyframes content-fadeOut {
  0% {opacity: 1;}
  50% {opacity: 0;}
  100% {opacity: 0;}
}
//======================================//


//======================================//
// 切换评论
.changeComment
  .comment-headline
    display: inline-block;
  .comment-switch
    display: inline-block;
    float: right;
    margin: .1rem auto 0;
    padding: .2rem .8rem;
    width: max-content;
    border-radius: 8px;
    background: #f6f8fa;
    .first-comment
      color: #49b1f5;
    .second-comment
      color: #ff7242;
    .switch-btn
      position: relative;
      display: inline-block;
      margin: -4px .4rem 0;
      width: 42px;
      height: 22px;
      border-radius: 34px;
      background-color: #49b1f5;
      vertical-align: middle;
      -webkit-transition: .4s;
      -moz-transition: .4s;
      -o-transition: .4s;
      -ms-transition: .4s;
      transition: .4s;  
      &:before
        position: absolute;
        bottom: 4px;
        left: 4px;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background-color: #fff;
        content: '';
        -webkit-transition: .4s;
        -moz-transition: .4s;
        -o-transition: .4s;
        -ms-transition: .4s;
        transition: .4s
      &.move
        background-color: #ff7242;
        &:before
          -webkit-transform: translateX(20px);
          -moz-transform: translateX(20px);
          -o-transform: translateX(20px);
          -ms-transform: translateX(20px);
          transform: translateX(20px);
//======================================//
